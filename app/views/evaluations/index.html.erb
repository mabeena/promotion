<h1>Listing evaluations</h1>

<table>
  <thead>
    <tr>
      <th>Evaluation startdate</th>
      <th>Evaluation enddate</th>
      <th>Communication rating</th>
      <th>Attitude rating</th>
      <th>Character rating</th>
      <th>Potential rating</th>
      <th>Performance rating</th>
      <th>Employee</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @evaluations.each do |evaluation| %>
      <tr>
        <td><%= evaluation.evaluation_startDate %></td>
        <td><%= evaluation.evaluation_endDate %></td>
        <td><%= evaluation.communication_rating %></td>
        <td><%= evaluation.attitude_rating %></td>
        <td><%= evaluation.character_rating %></td>
        <td><%= evaluation.potential_rating %></td>
        <td><%= evaluation.performance_rating %></td>
        <td><%= evaluation.employee_id %></td>
        <td><%= evaluation.position_id %></td>
        <td><%= link_to 'Show', evaluation %></td>
        <td><%= link_to 'Edit', edit_evaluation_path(evaluation) %></td>
        <td><%= link_to 'Destroy', evaluation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Evaluation', new_evaluation_path %>
